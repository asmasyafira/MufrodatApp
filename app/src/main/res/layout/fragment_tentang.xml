<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TentangFragment"
    android:background="@color/background">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:text="Tentang"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/mufrodat"
        android:id="@+id/imgtentang"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgtentang"
        android:text="Aplikasi baru saja rilis tanggal 25 Januari. Berisikan dengan mufrodat dan arti yang dapat memudahkan anak / remaja pada zaman sekarang."
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>


</RelativeLayout>