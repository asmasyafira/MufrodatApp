<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bab1Fragment"
    android:background="@color/background">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I . انطلق -ينطلق = Pergi"
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/a"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="II. مشي- يمشي = Berjalan "
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/b"
        android:layout_below="@id/a"
        android:layout_marginTop="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="III. غلبنى النوم = Ketiduran "
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/c"
        android:layout_below="@id/b"
        android:layout_marginTop="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IV. قبض - يقبض = Menangkap"
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/d"
        android:layout_below="@id/c"
        android:layout_marginTop="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="V. قبض الشرطي اللص = Polisi Menangkap Pencuri"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/e"
        android:layout_below="@id/d"
        android:layout_marginTop="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VI. جرس = Bel"
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/f"
        android:layout_below="@id/e"
        android:layout_marginTop="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VII. رن - يرن = Berdering"
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/g"
        android:layout_below="@id/f"
        android:layout_marginTop="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIII. سمع - يسمع = Mendengar"
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/h"
        android:layout_below="@id/g"
        android:layout_marginTop="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IX.كرر - يكرر = Mengulangi"
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/i"
        android:layout_below="@id/h"
        android:layout_marginTop="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X.سءم - يسءم = Bosan"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/j"
        android:layout_below="@id/i"
        android:layout_marginTop="20sp"/>
       </LinearLayout>
    </ScrollView>


</RelativeLayout>